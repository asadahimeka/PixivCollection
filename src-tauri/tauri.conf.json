{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "PixivCollection",
    "version": "1.0.0"
  },
  "build": {
    "distDir": "../web/dist",
    "devPath": "http://localhost:8080",
    "beforeDevCommand": "cd web && npm run dev",
    "beforeBuildCommand": "cd web && npm run build",
    "withGlobalTauri": true
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "top.nanoka.pixivcollection",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "publisher": "Yumine Sakura",
      "copyright": "Copyright Â© 2023 Yumine Sakura",
      "category": "Entertainment",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": true,
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://**",
          "http://**"
        ]
      },
      "fs": {
        "all": true,
        "scope": [
          "**"
        ]
      },
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "**"
        ]
      },
      "shell": {
        "all": true,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "cmd",
            "cmd": "cmd",
            "args": true
          }
        ]
      }
    },
    "windows": [
      {
        "title": "PixivCollection",
        "width": 1280,
        "height": 800,
        "minWidth": 375,
        "minHeight": 600,
        "fullscreen": false,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
